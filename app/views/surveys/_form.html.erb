<%= form_for @survey do |f| %>

  <div class=field>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  <div>


  <%= f.fields_for :questions do |builder| %>
    <%= render "question_fields", :f => builder %>
  <% end %>

  <%= link_to_add_fields "Add question", f, :questions %>

  <div class="actions">
  <p><%= f.submit "Submit" %></p>
  <div>
<% end %>
