<div class="form_settings">


<%= form_for @survey do |f| %>

  <% if @survey.errors.any? %>
    <ul>
      <% @survey.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class=field>
    <p><span>Name</span><%= f.text_field :name, placeholder: "Enter survey name here"   %></p>
    <p><span>Description</span><%= f.text_area :description, placeholder: "Description here"  %></p>
  <div>
</div>

<div class="form_settings">
  <%= f.fields_for :questions do |builder| %>
    <%= render "question_fields", :f => builder %>
  <% end %>

  <%= link_to_add_fields "Add question", f, :questions %>

  <p style="padding-top: 15px;" ><span>&nbsp</span><%= f.submit "PUBLISH", :class => 'submit'%><p>
<% end %>
  </div>
</div>
</div>
