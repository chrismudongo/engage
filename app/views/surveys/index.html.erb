<% title "Surveys" %>
<h1>Surveys</h1>
<div class="new_survey_link"><%= link_to "Create New Survey", new_survey_path %></div>
<table style="width:100%; border-spacing:0;">
  <tr>
    <th>Name</th>
    <th colspan="3" </th>
  </tr>
  <tbody>
  <% for survey in @surveys %>

      <td><%=h survey.name %></td>
      <td><%= link_to "Show", survey %></td>
      <td><%= link_to "Edit", edit_survey_path(survey) %></td>
      <td><%= link_to "Delete", survey, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</tbody>
</table>
