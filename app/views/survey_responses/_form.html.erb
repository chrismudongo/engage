
<%= simple_form_for(@survey_response) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :user_group %>
    <%= f.input :surveyID %>
    <%= f.input :responses %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
